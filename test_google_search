import time
import sys
from selenium import webdriver
from selenium.webdriver.chrome.options import Options
from selenium.webdriver.common.by import By
from selenium.webdriver.common.keys import Keys
from selenium.common.exceptions import WebDriverException, NoSuchElementException

def main():
    # Setup Chrome options for headless execution (suitable for GitHub CI)
    chrome_options = Options()
    chrome_options.add_argument("--headless")
    chrome_options.add_argument("--no-sandbox")
    chrome_options.add_argument("--disable-dev-shm-usage")
    chrome_options.add_argument("--window-size=1920,1080")

    driver = None
    try:
        # Initialize the WebDriver
        driver = webdriver.Chrome(options=chrome_options)

        # Step 1: Open Google
        driver.get("https://www.google.com")
        time.sleep(2)  # Wait for the page to load

        # Assert that Google page loaded
        assert "Google" in driver.title, "Google homepage did not load properly."

        # Step 2: Search for 'selenium'
        search_box = driver.find_element(By.NAME, "q")
        search_box.clear()
        search_box.send_keys("selenium")
        search_box.send_keys(Keys.RETURN)
        time.sleep(2)  # Wait for search results

        # Step 3: Print the first ten URLs from the search results
        results = driver.find_elements(By.CSS_SELECTOR, "div.yuRUbf > a")
        # Assert that search results are present
        assert results, "No search results found."
        # Assert at least ten results
        assert len(results) >= 10, f"Expected at least 10 results, found {len(results)}."

        print("First 10 URLs from Google search results for 'selenium':")
        for idx, result in enumerate(results[:10], 1):
            url = result.get_attribute("href")
            print(f"{idx}: {url}")

    except AssertionError as ae:
        print(f"Assertion Error: {ae}", file=sys.stderr)
        sys.exit(1)
    except (WebDriverException, NoSuchElementException) as e:
        print(f"Selenium Error: {e}", file=sys.stderr)
        sys.exit(1)
    except Exception as e:
        print(f"Unexpected Error: {e}", file=sys.stderr)
        sys.exit(1)
    finally:
        # Proper cleanup
        if driver:
            driver.quit()

if __name__ == "__main__":
    main()
